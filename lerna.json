{
  "useWorkspaces": true,
  "packages": ["packages/*", "site"],
  "npmClient": "yarn",
  "command": {
    "version": { "exact": true },
    "bootstrap": {
      "ignore": "@react-atomic-ui/template"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**"],
      "allowBranch": "master"
    }
  }
}
