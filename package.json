{
  "name": "react-atomic-ui",
  "version": "1.0.0",
  "description": "Simple component library to build React applications ",
  "main": "index.js",
  "repository": "https://github.com/laurazenc/react-atomic-ui.git",
  "author": "Laura <laurazenc@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna run build --ignore @react-atomic-ui/template --no-private --stream",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "lint": "lerna run lint --no-private --stream",
    "lint:types": "lerna exec --parallel \"tsc --noEmit\"",
    "site": "yarn workspace @react-atomic-ui/site",
    "start": "lerna run dev --ignore @react-atomic-ui/template --parallel",
    "test": "lerna run test --no-private --stream",
    "test:ci": "lerna run test:ci --no-private --stream",
    "test:cov": "lerna run test:cov"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@types/react": "^16.9.53",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "ts-jest": "^26.4.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "site"
    ]
  },
  "dependencies": {
    "typescript": "^4.0.3"
  }
}
