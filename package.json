{
  "name": "react-atomic",
  "version": "0.0.1",
  "description": "Component library based on atomic design principles using styled-components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "rollup": "rollup -c -w",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "typecheck": "tsc --noEmit --watch",
    "site": "cd site && yarn start",
    "i-all": "yarn && cd site && yarn",
    "dev": "npm-run-all --parallel rollup site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laurazenc/react-atomic.git"
  },
  "keywords": [
    "react",
    "styled-components",
    "atomic design"
  ],
  "author": "laurazenc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/laurazenc/react-atomic/issues"
  },
  "homepage": "https://github.com/laurazenc/react-atomic#readme",
  "peerDependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.0"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/setupFile.js"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.7.2",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "typescript": "^3.8.3"
  }
}
